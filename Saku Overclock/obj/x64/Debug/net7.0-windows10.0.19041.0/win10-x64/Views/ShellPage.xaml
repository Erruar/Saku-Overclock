<Page x:ConnectionId='1'
    x:Class="Saku_Overclock.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:helpers="using:Saku_Overclock.Helpers"
    xmlns:behaviors="using:Saku_Overclock.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity" xmlns:local="using:Saku_Overclock.ViewModels"
                     >
    <Page.Resources>
        <ThemeShadow x:ConnectionId='2' x:Name="SharedShadow" />
        <Thickness x:Key="NavigationViewBorderThickness">0</Thickness>
        <Thickness x:Key="NavigationViewContentGridBorderThickness">0</Thickness>
        <ListView x:ConnectionId='3' x:Name="KeyboardHandler" />
    </Page.Resources>
    <Grid  Canvas.ZIndex="4"> 
        <Grid>
            <Border x:ConnectionId='41' x:Name="ThemeOpacity"
       MinHeight="325" Opacity="0.0"
       CornerRadius="8" Margin="0,-180,0,0">
                <Border.Background>
                    <ImageBrush x:ConnectionId='43' x:Name="ThemeBackground"
                   ImageSource="https://i.imgur.com/fw41KXN.png"
                   Stretch="UniformToFill"/>
                </Border.Background> 
            </Border>
            <Grid x:ConnectionId='42' x:Name="ThemeMaskOpacity" Opacity="0.0" Background="{ThemeResource BackgroundImageMaskAcrylicBrush}"></Grid>
        </Grid>
        <Grid  Canvas.ZIndex="4">
            <NavigationView x:ConnectionId='4'
    x:Name="NavigationViewControl"
    Canvas.ZIndex="0"
                                                 
                                                 
    IsBackButtonVisible="Visible"
                                                                 
                                                           
    IsSettingsVisible="True"
    ExpandedModeThresholdWidth="1280"
                                                                 
                                                                               >
                <NavigationView.MenuItems>
                    <!--
        TODO: Update item titles by updating <x:Uid>.Content entries in Strings/en-us/Resources.resw.
        https://docs.microsoft.com/windows/uwp/app-resources/localize-strings-ui-manifest#refer-to-a-string-resource-identifier-from-xaml
    
        TODO: Update item icons by updating FontIcon.Glyph properties.
        https://docs.microsoft.com/windows/apps/design/style/segoe-fluent-icons-font#icon-list
        -->
                    <NavigationViewItem x:Uid="Shell_Главная" helpers:NavigationHelper.NavigateTo="Saku_Overclock.ViewModels.ГлавнаяViewModel">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xf157;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem x:Uid="Shell_Пресеты" helpers:NavigationHelper.NavigateTo="Saku_Overclock.ViewModels.ПресетыViewModel">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xeadf;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem x:Uid="Shell_Параметры" helpers:NavigationHelper.NavigateTo="Saku_Overclock.ViewModels.ПараметрыViewModel">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe945;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem x:Uid="Shell_Информация" helpers:NavigationHelper.NavigateTo="Saku_Overclock.ViewModels.ИнформацияViewModel">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe950;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem x:Uid="Shell_Кулер" helpers:NavigationHelper.NavigateTo="Saku_Overclock.ViewModels.КулерViewModel">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe9ca;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
                <NavigationView.HeaderTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock
                    Text="{Binding}"
                    Style="{ThemeResource TitleTextBlockStyle}" />
                        </Grid>
                    </DataTemplate>
                </NavigationView.HeaderTemplate>
                <i:Interaction.Behaviors>
                    <behaviors:NavigationViewHeaderBehavior x:ConnectionId='38'
                                                                                              >
                        <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                            Text=" "
                            Style="{ThemeResource TitleTextBlockStyle}" />

                                </Grid>
                            </DataTemplate>
                        </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                    </behaviors:NavigationViewHeaderBehavior>
                </i:Interaction.Behaviors>
                <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                    <Frame x:ConnectionId='40' x:Name="NavigationFrame" />

                </Grid>
            </NavigationView>
            <Grid x:ConnectionId='5' x:Name="AppTitleBar" Canvas.ZIndex="0" Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:ConnectionId='13' x:Name="LeftPaddingColumn" Width="0"/>
                    <ColumnDefinition x:ConnectionId='14' x:Name="IconColumn" Width="120"/>
                    <ColumnDefinition x:ConnectionId='15' x:Name="LeftDragColumn" Width="*"/>
                    <ColumnDefinition x:ConnectionId='16' x:Name="SearchColumn" Width="4*" MinWidth="220"/>
                    <ColumnDefinition x:ConnectionId='17' x:Name="RightDragColumn" Width="*" MinWidth="38"/>
                    <ColumnDefinition x:ConnectionId='18' x:Name="RingerNotif" Width="32"/>
                    <ColumnDefinition x:ConnectionId='19' x:Name="RightRDragColumn" Width="10"/>
                    <ColumnDefinition x:ConnectionId='20' x:Name="RightPaddingColumn" Width="0"/>
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='21' Grid.Column="1"                                           x:Name="TitleIcon"                                          Margin="0,0,0,0"   
      Canvas.ZIndex="4"
      Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
      IsHitTestVisible="True"
      VerticalAlignment="Top">
                    <!--<Image Source="/Assets/WindowIcon.ico"
           HorizontalAlignment="Left"
           Width="16"
           Height="16" />
    <TextBlock x:Name="AppTitleBarText"
               VerticalAlignment="Center"
               TextWrapping="NoWrap"
               Style="{StaticResource CaptionTextBlockStyle}"
               Margin="28,0,0,0"/>
    <HyperlinkButton TabIndex="-1" Margin="107,2,0,0">Rel-Cand v2</HyperlinkButton>-->
                    <Button x:ConnectionId='29' x:Name="Icon"
Grid.Column="0"
Height="33"
Margin="8,8,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Top"
                  
                                          
Translation="0,0,8">
                        <Button.Transitions>
                            <RepositionThemeTransition />
                        </Button.Transitions>
                        <Button.ContentTransitions>
                            <RepositionThemeTransition />
                        </Button.ContentTransitions>
                        <StackPanel x:ConnectionId='30' Margin="0,0,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Orientation="Horizontal"
                                                             >
                            <Image x:ConnectionId='31' x:Name="IconImg"
                                                            
       Width="24"
       Height="24"
       Margin="0,-1,0,0"
       Opacity="0.8"
       Source="ms-appx:///Assets/WindowIcon.ico">
                                <Image.OpacityTransition>
                                    <ScalarTransition />
                                </Image.OpacityTransition>
                            </Image>
                            <StackPanel x:ConnectionId='32' Name="IconTitle"
                                                                 
            Width="0"
            Margin="8,-8,0,0"
            VerticalAlignment="Center"
            Opacity="0">
                                <StackPanel.OpacityTransition>
                                    <ScalarTransition />
                                </StackPanel.OpacityTransition>
                                <TextBlock x:ConnectionId='35' Margin="-6,0,0,0"
               HorizontalAlignment="Left"
                                                                    
               FontSize="10"
               FontWeight="Medium"
               Text="Saku"
               Visibility="Visible" />
                                <TextBlock x:ConnectionId='36' Margin="0,-3,0,-8"
               HorizontalAlignment="Left"
                                                                    
               FontSize="12"
               FontWeight="Bold"
               Foreground="{ThemeResource AccentColor}"
               Text="Overclock"
               Visibility="Visible" />
                            </StackPanel>
                            <StackPanel x:ConnectionId='33' x:Name="PreviewBuildIndicator"
            Grid.Column="4"
                                                                 
            Grid.ColumnSpan="2"
            Margin="-16,-12,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="{ThemeResource AccentColor}"
            CornerRadius="3"
            Visibility="Visible">
                                <StackPanel.Transitions>
                                    <RepositionThemeTransition />
                                </StackPanel.Transitions>
                                <TextBlock x:ConnectionId='34' x:Name="VersionNumberIndicator"
                                                                    
               Padding="3,0,3,0"
               VerticalAlignment="Center"
               FontSize="8"
               FontWeight="Bold"
               Foreground="{ThemeResource DefaultFGColorAccentBrush}"
               Text="RC-3" />
                            </StackPanel>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid x:ConnectionId='22' HorizontalAlignment="Center" Grid.Column="3" x:Name="ProfileSetup" Canvas.ZIndex="4" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:ConnectionId='26' x:Name="ProfileSetComboBox"  
                              Grid.Column="0"
                              MinWidth="167"                                                    
                              Canvas.ZIndex="4"                                                              
                              CornerRadius="15,0,0,15"                                                       
                              Style="{ThemeResource AcrylicComboBoxStyle}" >
                        <ComboBox.DataContext>
                            <local:ПараметрыViewModel></local:ПараметрыViewModel>
                        </ComboBox.DataContext>
                        <ComboBoxItem Content="User profile..."/>
                        <ComboBoxItem IsEnabled="False" >
                            <NavigationViewItemSeparator BorderThickness="1"></NavigationViewItemSeparator>
                        </ComboBoxItem>
                        <ComboBoxItem Content="Min"/>
                        <ComboBoxItem Content="Eco"/>
                        <ComboBoxItem Content="Balance"/>
                        <ComboBoxItem Content="Speed"/>
                        <ComboBoxItem Content="Max"/>
                    </ComboBox>
                    <Button x:ConnectionId='27' x:Name="ProfileSetButton" Margin="0,-10,0,0"
                              Grid.Column="1"                                                      
                              MinWidth="148"                                 
                              Canvas.ZIndex="4" Style="{StaticResource AccentButtonStyle}"
                              CornerRadius="0,15,15,0" Height="{Binding ElementName=ProfileSetComboBox, Path=ActualHeight}" >
                        <TextBlock x:ConnectionId='28' Text="Activate!" x:Name="ActivateText" FontWeight="ExtraBold"></TextBlock> 
                    </Button>
                </Grid>
                <Grid x:ConnectionId='23' Name="RingerNotifGrid"
      Grid.Column="5" Canvas.ZIndex="4"
      Width="32"
      Height="32"
      Margin="0,-1,0,0"
      HorizontalAlignment="Right"
      VerticalAlignment="Stretch"
      CornerRadius="0,0,0,0">
                    <ToggleButton x:ConnectionId='24' x:Name="ToggleNotificationPanelBtn"
                  Padding="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"                                         
                  Shadow="{ThemeResource SharedShadow}"
                  Style="{ThemeResource AcrylicToggleButtonStyle}">
                        <FontIcon   
                  Glyph="&#xea8f;" />
                    </ToggleButton>
                    <InfoBadge x:ConnectionId='25' x:Name="NewNotificationCountBadge"
               Margin="0,-4,-4,0"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Style="{StaticResource AttentionValueInfoBadgeStyle}"
               Visibility="Collapsed"
               Value="0" />
                </Grid>
            </Grid>
            <Grid x:ConnectionId='6' x:Name="NotificationLostFocusBackground"
       VerticalAlignment="Stretch"
       Opacity="0"
                                                                      
       Visibility="Collapsed">
                <Grid.OpacityTransition>
                    <ScalarTransition />
                </Grid.OpacityTransition>
                <Grid Background="{ThemeResource NotificationLostFocusBackgroundGradientBrush}"
           Opacity="0.00000001" />
                <Grid Background="{ThemeResource NotificationLostFocusBackgroundGradientBrush}" />
            </Grid>
            <Grid x:ConnectionId='7' x:Name="NotificationPanel"
       Margin="0,48,-700,0"
       HorizontalAlignment="Right"
       Background="{ThemeResource NotificationPanelBrush}"
       CornerRadius="8,0,0,8"
       Shadow="{ThemeResource SharedShadow}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Transitions>
                    <RepositionThemeTransition />
                </Grid.Transitions>
                <Grid>
                    <ScrollViewer x:ConnectionId='10' x:Name="NotificationPanelScrollViewer"
                       CanContentRenderOutsideBounds="True"
                       HorizontalScrollBarVisibility="Disabled">
                        <Grid MinWidth="608"
                   MinHeight="200">
                            <StackPanel x:ConnectionId='11' x:Name="NoNotificationIndicator"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Orientation="Vertical">
                                <StackPanel.OpacityTransition>
                                    <ScalarTransition />
                                </StackPanel.OpacityTransition>
                                <Image Width="200"
                            Margin="0,0,0,16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Opacity="1"
                            Source="ms-appx:///Assets/Images/GameMascot/PaimonSleep-MonoTransparent.png" />
                                <Grid Padding="24,8"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           CornerRadius="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="2"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Opacity="0.50"
                                    Text="No notifications "
                                    TextAlignment="Center" />
                                </Grid>
                            </StackPanel>
                            <StackPanel x:ConnectionId='12' x:Name="NotificationContainer"
                             Margin="0,0,0,7">
                                <StackPanel.ChildrenTransitions>
                                    <TransitionCollection>
                                        <PopupThemeTransition />
                                        <RepositionThemeTransition />
                                    </TransitionCollection>
                                </StackPanel.ChildrenTransitions>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
                <Grid x:ConnectionId='8' x:Name="NotificationPanelClearAllGrid"
           Grid.Row="1"
           Padding="8"
           VerticalAlignment="Bottom"
           Background="{ThemeResource NotificationPanelBrush}"
           Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='9' x:Name="NotificationPanelClearAllBtn"
                 Grid.Column="1"
                 HorizontalAlignment="Right"
                                             
                 CornerRadius="15,15,15,15" >
                        <StackPanel Margin="4,0"
                         Orientation="Horizontal">
                            <TextBlock Margin="0,-1,8,1"
                            FontWeight="Medium"
                            Text="Clear All" />
                            <FontIcon  
                           FontSize="16" FontFamily="{StaticResource SymbolThemeFontFamily}"
                           Glyph="&#xe7ed;" Margin="0,-2,0,0" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid> 
</Page>

