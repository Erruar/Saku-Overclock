<Page x:ConnectionId='1'
    x:Class="Saku_Overclock.Views.КулерPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid x:ConnectionId='2' x:Name="ContentArea">
		<Grid>
			<!-- Начало -->
			<TextBlock x:Uid="Cooler_Name" Text="Скорости кулера" FontSize="30" Margin="0,-65,0,0"></TextBlock>
            <ScrollViewer VerticalAlignment="Top" Margin="0,0,-50,0">
                <Grid Margin="0,0,0,0">
                    <TextBlock x:Uid="Cooler_Config" Text="Сохранённые конфиги:" FontSize="20" Margin="0,0,0,0"></TextBlock>
                    <ComboBox x:ConnectionId='8' x:Name="Selfan" Height="30" Width="200" Margin="230,0,0,0"                                           />
                    <Grid>
                        <TextBlock x:Uid="Cooler_Service" Margin="0,40,0,0" Text="Сервис контроля скорости:" FontSize="16"/>
                        <RadioButton x:ConnectionId='18' x:Name="Disabl"                           VerticalAlignment="Top" Margin="0,70,0,0"/>
                        <RadioButton x:ConnectionId='19' x:Name="Readon"                           VerticalAlignment="Top" Margin="0,100,0,0"/>
                        <RadioButton x:ConnectionId='20' x:Name="Enabl"                         VerticalAlignment="Top" Margin="0,130,0,0"/>
                        <TextBlock FontSize="13" x:Uid="Cooler_Service_Disabled" Text="Выключен" VerticalAlignment="Top" Margin="30,76,0,0"/>
                        <TextBlock FontSize="13" x:Uid="Cooler_Service_Read" Text="Только для чтения" VerticalAlignment="Top" Margin="30,106,0,0"/>
                        <TextBlock FontSize="13" x:Uid="Cooler_Service_Enabled" Text="Включен" VerticalAlignment="Top" Margin="30,136,0,0"/>
                    </Grid>
                    <Grid>
                        <TextBlock FontSize="15" VerticalAlignment="Top" Margin="0,170,0,0" x:Uid="Cooler_Temp" Text="Текущая температура: 59 C"/>
                        <TextBlock x:ConnectionId='17' FontSize="15" FontFamily="Consolas" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="195,172,0,0" x:Name="Temp" Text="Undefined"/>

                    </Grid>

                    <Grid Margin="0,195,0,0">
                        <Grid>
                            <TextBlock x:ConnectionId='13' VerticalAlignment="Top" x:Name="Fan1Val" Text="Auto" Margin="140,30,0,0"/>
                            <TextBlock Text="Fan #1" VerticalAlignment="Top"/>
                            <Slider x:ConnectionId='14' x:Uid="Cooler_Fan" x:Name="Fan1" VerticalAlignment="Top"                                  HorizontalAlignment="Left" Width="200" Margin="0,30,0,0" Minimum="0" Maximum="110" Value="110"></Slider>
                            <TextBlock x:ConnectionId='15' x:Uid="Cooler_Current_Fan" VerticalAlignment="Top" x:Name="Fan1Cur" Text="Текущая скорость: 25 %" Margin="0,90,0,0"/>
                            <ProgressBar x:ConnectionId='16' x:Name="Fan1Pr" Value="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="0,120,0,0"></ProgressBar>
                        </Grid>
                        <Grid Margin="0,170,0,0">
                            <TextBlock x:ConnectionId='9' VerticalAlignment="Top" x:Name="Fan2Val" Text="Auto" Margin="140,30,0,0"/>
                            <TextBlock Text="Fan #2" VerticalAlignment="Top"/>
                            <Slider x:ConnectionId='10'  x:Uid="Cooler_Fan" x:Name="Fan2"                                  HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,30,0,0" Minimum="0" Maximum="110" Value="110"></Slider>
                            <TextBlock x:ConnectionId='11' x:Uid="Cooler_Current_Fan" x:Name="Fan2Cur" Text="Текущая скорость: 25 %" VerticalAlignment="Top" Margin="0,90,0,0"/>
                            <ProgressBar x:ConnectionId='12' x:Name="Fan2Pr" Value="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="0,120,0,0"></ProgressBar>
                        </Grid>
                    </Grid>

                </Grid>
            </ScrollViewer>
            <ToggleButton x:ConnectionId='3'                                                       x:Name="Fanauto" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,0,-13,15" x:Uid="Cooler_Autoupdate">
                <ContentControl>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" HorizontalAlignment="Left"     Glyph="&#xe9d2;"/>
                </ContentControl>
            </ToggleButton>
            <Button x:ConnectionId='4' VerticalAlignment="Bottom"                      HorizontalAlignment="Right" Height="40" Width="40" Margin="0,0,37,15" x:Uid="Cooler_Refresh" ToolTipService.ToolTip="Обновить">
                <Grid>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" HorizontalAlignment="Left"  Margin="-5,0,-5,0"   Glyph="&#xe9f3;">
                    </FontIcon>
                </Grid>
            </Button>
            <Button x:ConnectionId='5' VerticalAlignment="Bottom"                       x:Name="Suggest" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,0,87,15"  ToolTipService.ToolTip="Suggest">
                <Grid>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" HorizontalAlignment="Left"  Margin="-5,0,-5,0"   Glyph="&#xe897;">
                    </FontIcon>
                </Grid>
            </Button>
            <TeachingTip x:ConnectionId='6' x:Name="SuggestTip"
                              x:Uid="Cooler_suggesttip"
    Title="These configs are the best for you:"
    Subtitle="error in line 257 of org.sakuoverclock.app">
                <TeachingTip.IconSource>
                    <SymbolIconSource Symbol="Refresh" />
                </TeachingTip.IconSource>
            </TeachingTip>
            <Button x:ConnectionId='7' VerticalAlignment="Bottom"                                HorizontalAlignment="Right" Height="40" Width="40" Margin="0,0,137,15"  ToolTipService.ToolTip="Advanced mode">
                <Grid>
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" HorizontalAlignment="Left"  Margin="-5,0,-5,0"   Glyph="&#xe90f;">
                    </FontIcon>
                </Grid>
            </Button>
        </Grid>
	</Grid>
</Page>

