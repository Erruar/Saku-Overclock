<Page
    x:Class="Saku_Overclock.Views.ПресетыPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:Saku_Overclock.Styles"
    mc:Ignorable="d">
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />
    </Page.Resources>
    <Grid x:Name="ContentArea" Margin="-48,0,-50,0">
        <Button x:Name="HiddenButton" Visibility="Collapsed"/>
        <Button x:Name="HiddenAccentButton" Style="{StaticResource AccentButtonStyle}" Visibility="Collapsed"/>
        <TextBlock x:Uid="Preset_Name" Text="Пресеты" FontSize="30" Margin="0,-65,0,0"></TextBlock>
        <Grid HorizontalAlignment="Stretch" Margin="0,-24,0,0" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,5,5" CornerRadius="8">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="62"/> 
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,0" CornerRadius="8" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="23,-2,0,0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock FontWeight="SemiBold" x:Uid="Preset_AdvancedMode" FontSize="16" Text="Расширенный режим"/>
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch" x:Name="TryAdvancedButton" CornerRadius="16" Margin="10,0,23,0" Click="TryAdvancedButton_Click">
                            <TextBlock x:Uid="Preset_AdvancedModeTry" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Попробовать" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,10,0,0" CornerRadius="8" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="23,0,0,0" VerticalAlignment="Center" Text="Сохранённые профили" Grid.Row="0" FontWeight="SemiBold" FontSize="16"/>
                        <Grid Grid.Row="1" Margin="10,3,5,9" CornerRadius="8">
                            <local:ProfileSelector SelectionChanged="ProfilesControl_SelectionChanged" x:Name="ProfilesControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Border VerticalAlignment="Top" Margin="25,0,25,0" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" Height="1" HorizontalAlignment="Stretch"/> 
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/> 
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <local:BatteryControl Value="55" Margin="23,10,0,10" Grid.Column="0" HorizontalAlignment="Stretch" MaxHeight="100" />
                            <StackPanel HorizontalAlignment="Right" Margin="0,6,23,0" Orientation="Vertical" VerticalAlignment="Center" Grid.Column="1">
                                <TextBlock FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Right" Text="Осталось времени работы:"/>
                                <TextBlock FontWeight="Bold" FontSize="17" HorizontalAlignment="Right" x:Name="LastBatteryTime" Text="3 Часа 17 Минут"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="3" Margin="0,10,0,-10" CornerRadius="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="0,0,5,12" CornerRadius="8" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <FlipView x:Name="TipsFlipView" Background="Transparent">
                                <FlipView.ItemTemplate>
                                    <DataTemplate>
                                        <ScrollViewer Margin="17,27,17,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock TextAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" 
                                                       TextWrapping="WrapWholeWords" 
                                                       Text="{Binding}" />
                                        </ScrollViewer> 
                                    </DataTemplate>
                                </FlipView.ItemTemplate>
                            </FlipView>
                            <TextBlock Margin="0,7,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" x:Uid="Preset_Suggestions" Text="Советы" Grid.Row="0" FontWeight="SemiBold" FontSize="16"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,0,0,12" CornerRadius="8" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <FlipView x:Name="AdvancedFlipView" Background="Transparent">
                                <FlipViewItem>
                                    <ScrollViewer Margin="0,28,0,0">
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <TextBlock FontWeight="SemiBold" FontSize="17" x:Uid="Preset_Undervolting" Text="Андервольтинг"/>
                                                        <FontIcon Margin="5,7.5,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" ToolTipService.ToolTip="Андервольтинг это возможность снизить напряжение на вашем процессоре" Glyph="&#xe9ce;">
                                                            <FontIcon.RenderTransform>
                                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                    </StackPanel>
                                                    <ComboBox SelectionChanged="O1m_SelectionChanged" SizeChanged="O1m_SizeChanged" HorizontalAlignment="Center" Margin="5,3,0,0" Loaded="O1m_Loaded" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" x:Name="O1m" Background="{Binding ElementName=HiddenAccentButton, Path=Background}" Visibility="{Binding ElementName=O1, Path=IsOn}">
                                                        <ComboBoxItem Content="Лёгкий"/>
                                                        <ComboBoxItem Content="Средний"/>
                                                        <ComboBoxItem Content="Сильный"/>
                                                    </ComboBox>
                                                </StackPanel>
                                                <ToggleSwitch x:Uid="Preset_Switch" x:Name="O1" Toggled="O1_Toggled" Margin="37,0,-37,0" HorizontalAlignment="Center"/>
                                                <Border Height="10" Background="Transparent"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem>
                                    <ScrollViewer Margin="0,28,0,0">
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                    <TextBlock FontWeight="SemiBold" FontSize="17" Text="Stream Optimizer v2.0"/>
                                                    <FontIcon Margin="5,6,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Preset_StreamOptimizer" Glyph="&#xe9ce;">
                                                        <FontIcon.RenderTransform>
                                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                        </FontIcon.RenderTransform>
                                                    </FontIcon>
                                                </StackPanel>
                                                <InfoBar Severity="Error" Margin="22,7,22,0" x:Name="StreamOptimizerUnsupportedSign" HorizontalAlignment="Center" IsClosable="False" IsOpen="True" Title="Не поддерживается!"/>
                                                <ToggleSwitch x:Uid="Preset_Switch" Visibility="Collapsed" x:Name="StreamOptimizerSwitch" Toggled="StreamOptimizerSwitch_Toggled" Margin="37,0,-37,0" HorizontalAlignment="Center"/>
                                                <Border Height="10" Background="Transparent"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem>
                                    <ScrollViewer Margin="0,28,0,0">
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                    <TextBlock FontWeight="SemiBold" FontSize="17" x:Uid="Preset_RtssOverlay" Text="RTSS Оверлей"/>
                                                    <FontIcon Margin="5,6,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="InfoARTSSTooltip" Glyph="&#xe9ce;">
                                                        <FontIcon.RenderTransform>
                                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                        </FontIcon.RenderTransform>
                                                    </FontIcon>
                                                </StackPanel>
                                                <ToggleSwitch x:Uid="Preset_Switch" x:Name="RtssOverlaySwitch" Toggled="RtssOverlaySwitch_Toggled" Margin="37,0,-37,0" HorizontalAlignment="Center"/>
                                                <Border Height="10" Background="Transparent"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem>
                                    <ScrollViewer Margin="0,28,0,0">
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                    <TextBlock FontWeight="SemiBold" FontSize="17" Text="TrayMon©"/>
                                                    <FontIcon Margin="5,6,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="InfoANiIcons" Glyph="&#xe9ce;">
                                                        <FontIcon.RenderTransform>
                                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                        </FontIcon.RenderTransform>
                                                    </FontIcon>
                                                </StackPanel>
                                                <ToggleSwitch x:Uid="Preset_Switch" x:Name="TrayMonFeatSwitch" Toggled="TrayMonFeatSwitch_Toggled" Margin="37,0,-37,0" HorizontalAlignment="Center"/>
                                                <Border Height="10" Background="Transparent"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                            </FlipView>
                            <TextBlock Margin="0,7,0,0" x:Uid="Preset_AdvancedFeatures" VerticalAlignment="Top" HorizontalAlignment="Center" Text="Дополнительно" Grid.Row="0" FontWeight="SemiBold" FontSize="16"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Margin="10,0,10,7" CornerRadius="8" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Margin="0,17,10,0" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" Grid.Row="0" CornerRadius="16" HorizontalAlignment="Right" Width="40" Height="40" HorizontalContentAlignment="Stretch">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </Button.RenderTransform>
                            <Grid Margin="-5,-5,-5,-5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <FontIcon Margin="3,0,0,0" Glyph="&#xE70F;" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        <Button Margin="0,17,40,0" x:Name="CurrentMode_Button" Click="AnimatedToggleButton_Click" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Top" Grid.Row="0" CornerRadius="16" HorizontalAlignment="Right" Width="40" Height="40" HorizontalContentAlignment="Stretch">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </Button.RenderTransform>
                            <Grid Margin="-5,-5,-5,-5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <FontIcon Margin="3,0,0,0" Glyph="&#xF4A5;" x:Name="CurrentMode_Icon" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        <StackPanel Margin="23,17,23,0" VerticalAlignment="Top" Grid.Row="0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" MaxHeight="20" VerticalAlignment="Top" Text="Информация о пресете" FontWeight="SemiBold" FontSize="16"/> 
                            <Border Margin="2,10,2,0" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" Height="1" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        <Grid Grid.Row="1" Margin="23,10,23,10"> 
                            <ScrollViewer>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Margin="0,-2,0,0" TextWrapping="Wrap" x:Name="SelectedProfile_Name" FontWeight="SemiBold" FontSize="16" Text="Имя пресета"/>
                                    <TextBlock Margin="0,2,0,0" TextWrapping="Wrap" x:Name="SelectedProfile_Description" Text="Обычный кастомный пресет. Ничего нового. Кстати, вы можете изменить ему описание!"/>
                                    <StackPanel x:Name="ProfileSettings_StackPanel" Margin="0,13,0,0" Orientation="Vertical">
                                        <TextBlock Text="Настройки пресета" FontWeight="SemiBold" FontSize="16"/>
                                        <Border Margin="2,10,2,0" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" Height="1" HorizontalAlignment="Stretch"/>
                                        <StackPanel Margin="0,12,0,0" Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE9CA;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAADD8E6" Offset="0.0" />
                                                            <GradientStop Color="#AAFFC0CB" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock x:Uid="Param_CPU_c1" Margin="5,0,0,0" Text="Максимальная температура CPU" FontSize="15"></TextBlock>
                                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c1_Help" HorizontalAlignment="Left" Margin="5,4,0,-4" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Grid>
                                                    <CheckBox Width="10" x:Name="c1" Checked="C1_Checked" Unchecked="C1_Checked"/>
                                                    <Slider x:Name="c1v" ValueChanged="C1_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" Value="80" HorizontalAlignment="Left" Minimum="50" Maximum="100"/>
                                                </Grid>
                                                <NumberBox Margin="10,0,0,0" Minimum="50" Height="33" Width="120" HorizontalAlignment="Left" SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="10" x:Name="c1t" ValueChanged="C2t_ValueChanged"  GotFocus="C2t_FocusEngaged"  LostFocus="C2t_FocusDisengaged"  Value="{Binding ElementName=c1v, Path=Value, Mode=TwoWay}"></NumberBox>
                                            </StackPanel>
                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE945;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAfdb640" Offset="0.0" />
                                                            <GradientStop Color="#AAbc7838" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Margin="5,0,0,0" x:Uid="Param_CPU_c2" Text="Лимит мощности CPU" FontSize="15"></TextBlock>
                                                <FontIcon Margin="5,4,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c2_Help" HorizontalAlignment="Left" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal">
                                                <Grid>
                                                    <CheckBox x:Name="c2" Checked="C2_Checked" Unchecked="C2_Checked"/>
                                                    <Slider x:Name="c2v" ValueChanged="C2_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" Minimum="1" Maximum="40" Value="20"/>
                                                </Grid>
                                                <NumberBox Margin="10,0,0,0"  CornerRadius="6" Height="33" Width="120" Minimum="1" x:Name="c2t" HorizontalAlignment="Left" ValueChanged="C2t_ValueChanged" GotFocus="C2t_FocusEngaged" LostFocus="C2t_FocusDisengaged"  SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="10" Value="{Binding ElementName=c2v, Path=Value, Mode=TwoWay}"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE945;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAfdb640" Offset="0.0" />
                                                            <GradientStop Color="#AAbc7838" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Margin="5,0,0,0" x:Uid="Param_CPU_c3" Text="Реальная мощность CPU" FontSize="15"></TextBlock>
                                                <FontIcon Margin="5,4,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c3_Help" HorizontalAlignment="Left" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal">
                                                <Grid>
                                                    <CheckBox x:Name="c3" Checked="C3_Checked" Unchecked="C3_Checked"/>
                                                    <Slider x:Name="c3v" ValueChanged="C3_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" Minimum="1" Maximum="45" Value="25"/>
                                                </Grid>
                                                <NumberBox Margin="10,0,0,0" Minimum="1" Height="33" Width="120" HorizontalAlignment="Left" SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="10" x:Name="c3t" ValueChanged="C2t_ValueChanged" GotFocus="C2t_FocusEngaged" LostFocus="C2t_FocusDisengaged" Value="{Binding ElementName=c3v, Path=Value, Mode=TwoWay}"></NumberBox>
                                            </StackPanel>
                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE945;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAfdb640" Offset="0.0" />
                                                            <GradientStop Color="#AAbc7838" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Margin="5,0,0,0" x:Uid="Param_CPU_c4" Text="Средняя мощность CPU" FontSize="15"></TextBlock>
                                                <FontIcon Margin="5,4,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c4_Help" HorizontalAlignment="Left" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal">
                                                <Grid>
                                                    <CheckBox x:Name="c4" Checked="C4_Checked" Unchecked="C4_Checked"/>
                                                    <Slider x:Name="c4v" ValueChanged="C4_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" Minimum="1" Maximum="45" Value="25"/>
                                                </Grid>
                                                <NumberBox Margin="10,0,0,0" Minimum="1" Height="33" Width="120" HorizontalAlignment="Left" SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="10" x:Name="c4t" ValueChanged="C2t_ValueChanged" GotFocus="C2t_FocusEngaged" LostFocus="C2t_FocusDisengaged" Value="{Binding ElementName=c4v, Path=Value, Mode=TwoWay}"></NumberBox>
                                            </StackPanel>
                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE916;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAa217e3" Offset="0.0" />
                                                            <GradientStop Color="#AA2f2f70" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Margin="5,0,0,0" x:Uid="Param_CPU_c5" Text="Время быстрого разгона" FontSize="15"></TextBlock>
                                                <FontIcon Margin="5,4,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c5_Help" HorizontalAlignment="Left" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal">
                                                <Grid>
                                                    <CheckBox x:Name="c5" Checked="C5_Checked" Unchecked="C5_Checked"/>
                                                    <Slider x:Name="c5v" ValueChanged="C5_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" Minimum="1" Maximum="128" Value="64"/>
                                                </Grid>
                                                <NumberBox Margin="10,0,0,0" Minimum="1" Height="33" Width="120" HorizontalAlignment="Left" SpinButtonPlacementMode="Inline" SmallChange="1" LargeChange="10" x:Name="c5t" ValueChanged="C2t_ValueChanged" GotFocus="C2t_FocusEngaged" LostFocus="C2t_FocusDisengaged" Value="{Binding ElementName=c5v, Path=Value, Mode=TwoWay}"></NumberBox>
                                            </StackPanel>
                                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                                <Border Height="20" Width="20" CornerRadius="15">
                                                    <FontIcon Glyph="&#xE916;" FontSize="15"/>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0.3,0.5" EndPoint="1.3,1.5">
                                                            <GradientStop Color="#AAa217e3" Offset="0.0" />
                                                            <GradientStop Color="#AA2f2f70" Offset="0.10" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Margin="5,0,0,0" x:Uid="Param_CPU_c6" Text="Время медленного разгона" FontSize="15"></TextBlock>
                                                <FontIcon Margin="5,4,0,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c6_Help" HorizontalAlignment="Left" Glyph="&#xe9ce;">
                                                    <FontIcon.RenderTransform>
                                                        <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,0" Orientation="Horizontal">
                                                <Grid>
                                                    <CheckBox x:Name="c6" Checked="C6_Checked" Unchecked="C6_Checked"/>
                                                    <Slider x:Name="c6v" ValueChanged="C6_ValueChanged" Margin="35,0,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" Minimum="1" Maximum="128" Value="128"/>
