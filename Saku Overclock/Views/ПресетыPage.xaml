<Page
    x:Class="Saku_Overclock.Views.ПресетыPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:Saku_Overclock.Styles" xmlns:local1="using:Saku_Overclock.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow"/>
        <local1:DoubleToPercentConverter x:Key="DoubleToPercent"/>
    </Page.Resources>
    <Grid x:Name="ContentArea" Margin="-48,0,-50,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="1200">
        <Button x:Name="HiddenButton" Visibility="Collapsed"/>
        <Button x:Name="HiddenAccentButton" Style="{StaticResource AccentButtonStyle}" Visibility="Collapsed"/>
        <TextBlock x:Uid="Preset_Name" Text="Пресеты" FontSize="30" Margin="0,-95,0,0"/>
        <Grid HorizontalAlignment="Stretch" Margin="0,-44,0,0" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,5,5" CornerRadius="8">
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,-5" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.9*" MaxHeight="190"/>
                        <RowDefinition Height="2.2*" MaxHeight="236"/>
                        <RowDefinition MaxHeight="50"/>
                        <RowDefinition MaxHeight="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" MaxHeight="190" Margin="0,10,0,0" CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="45"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="0,-20,0,0" x:Uid="Preset_SavedProfiles" VerticalAlignment="Center" Text="Сохранённые профили" Grid.Row="0" FontWeight="SemiBold" FontSize="16"/>
                        <Button x:Name="AddProfileButton" Margin="0,-18,-35,-10" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Grid.Row="0" CornerRadius="16" HorizontalAlignment="Right" Height="40" HorizontalContentAlignment="Stretch">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Shadow="{StaticResource SharedShadow}" Translation="0,0,14" CornerRadius="16" Height="60" Width="60">
                                            <FontIcon Glyph="&#xE718;"/>
                                        </Button>
                                        <StackPanel Margin="15,0,0,0"> 
                                            <TextBox Shadow="{StaticResource SharedShadow}" Translation="0,0,10" x:Uid="Param_Profile_New_Name_Add" x:Name="SaveProfileN" PlaceholderText="Enter new name" CornerRadius="9" Width="250"></TextBox>
                                            <TextBox Shadow="{StaticResource SharedShadow}" Translation="0,0,10" Margin="0,6,0,0" x:Uid="Param_Profile_New_Desc_Add" x:Name="SaveProfileD" PlaceholderText="Enter new description" CornerRadius="9" Width="250"></TextBox>
                                            <Button Shadow="{StaticResource SharedShadow}" Translation="0,0,14" Margin="0,6,0,0" HorizontalAlignment="Right" x:Uid="Param_Profile_New_Name" Click="AddProfileButton_Click" Style="{StaticResource AccentButtonStyle}" CornerRadius="9" Width="{Binding ElementName=SaveProfileN, Path=ActualWidth}" Content="Edit name"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                            </Button.RenderTransform>
                            <StackPanel Orientation="Horizontal" Margin="-5,-5,-5,-5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <TextBlock FontSize="18" Margin="0,-1,0,0" x:Uid="Preset_SavedProfilesAddNew" Text="Добавить "/>
                                <FontIcon Margin="7,0,0,0" Glyph="&#xE710;" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Grid Grid.Row="1" Margin="0,-8,0,7" CornerRadius="16" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{ThemeResource ControlStrokeColorDefaultBrush}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <local:ProfileSelector Margin="8,11,8,11" SelectionChanged="ProfilesControl_SelectionChanged" x:Name="ProfilesControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" MaxHeight="230" CornerRadius="8" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Uid="Preset_AdvancedFeatures" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Киллер-фичи" Grid.Row="0" FontWeight="SemiBold" FontSize="16"/>
                        <Grid Grid.Column="1" Margin="0,32,0,12" CornerRadius="16" Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Background="{ThemeResource ControlStrokeColorDefaultBrush}" BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}" BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <FlipView x:Name="AdvancedFlipView" Background="Transparent" Margin="8,0,8,0">
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" FontSize="17" x:Uid="Preset_ReapplyOptions" Text="Переприменение разгона"/>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_ReapplyOptionsDesc" Text="Переприменять последние применённые параметры для избежания перезаписи другими приложениями"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <ToggleButton Click="ReapplyOptions_Toggled" x:Name="ReapplyOptions_Disabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл" x:Uid="Preset_CurveOptions_Disabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                        <ToggleButton Click="ReapplyOptions_Toggled" x:Name="ReapplyOptions_Enabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл" x:Uid="Preset_RtssOverlay_Enabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock FontWeight="SemiBold" FontSize="17" x:Uid="Preset_RtssOverlay" Text="RTSS Оверлей"/>
                                                        <FontIcon x:Uid="InfoARTSSTooltip" Margin="5,5.5,-11,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe9ce;">
                                                            <FontIcon.RenderTransform>
                                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_RtssOverlayDesc" Text="Включает оверлей с системными показателями поверх игры"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <ToggleButton Click="RtssOverlaySwitch_Toggled" x:Name="RtssOverlay_Disabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл" x:Uid="Preset_CurveOptions_Disabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                        <ToggleButton Click="RtssOverlaySwitch_Toggled" x:Name="RtssOverlay_Enabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл" x:Uid="Preset_RtssOverlay_Enabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock FontWeight="SemiBold" FontSize="17" Text="TrayMon"/>
                                                        <FontIcon x:Uid="InfoANiIcons" Margin="5,5.5,-11,-4" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe9ce;">
                                                            <FontIcon.RenderTransform>
                                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_RtssOverlayDesc" Text="Включает умный мониторинг показателей прямо в трее вашей системы"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <ToggleButton Click="TrayMonFeatSwitch_Toggled" x:Name="TrayMonFeat_Disabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл" x:Uid="Preset_CurveOptions_Disabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                        <ToggleButton Click="TrayMonFeatSwitch_Toggled" x:Name="TrayMonFeat_Enabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл" x:Uid="Preset_RtssOverlay_Enabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" FontSize="17" x:Uid="Preset_AutoApplyOptions" Text="Применение при запуске"/>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_AutoApplyOptionsDesc" Text="Автоматически переприменять последние применённые параметры разгона после открытия программы"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" Background="{Binding ElementName=HiddenButton, Path=Background}" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <ToggleButton Click="AutoApplyOptions_Toggled" x:Name="AutoApplyOptions_Disabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл" x:Uid="Preset_CurveOptions_Disabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                        <ToggleButton Click="AutoApplyOptions_Toggled" x:Name="AutoApplyOptions_Enabled" Background="Transparent" BorderBrush="Transparent" CornerRadius="10" Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл" x:Uid="Preset_RtssOverlay_Enabled" FontWeight="SemiBold"/>
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" FontSize="17" x:Uid="Settings_AppStart" Text="Параметры запуска"/>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_AppStartDesc" Text="Запускать программу при входе в систему. Режим запуска можно выбрать: в трее, с окном или не запускаться"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <Grid Margin="0,-9,0,-9" HorizontalAlignment="Center">
                                                        <ComboBox MinWidth="130" Style="{ThemeResource AcrylicComboBoxStyle}" Margin="{StaticResource XSmallTopMargin}" CornerRadius="10" SelectedIndex="0" x:Name="AutostartCom" SelectionChanged="AutostartCom_SelectionChanged">
                                                            <ComboBoxItem x:Uid="Settings_Start_Nothing" Content="Ничего не делать"/>
                                                            <ComboBoxItem x:Uid="Settings_Start_Mini" Content="Скрываться в трей"/>
                                                            <ComboBoxItem x:Uid="Settings_Start_Boot" Content="Автостарт с ситемой"/>
                                                            <ComboBoxItem x:Uid="Settings_Start_MiniBoot" Content="Автостарт в трее"/>
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="0.53*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold" FontSize="17" x:Uid="Preset_AppHide" Text="Параметры скрытия"/>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" MaxWidth="170" x:Uid="Preset_AppHideDesc" Text="Скрывать программу в трей при закрытии или сворачивании или не скрывать программу вообще"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20" Background="{Binding ElementName=HiddenButton, Path=BorderBrush}"/>
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center" BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}" 
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}" 
                                                        Translation="0,0,10">
                                                    <Grid Margin="0,-9,0,-9" HorizontalAlignment="Center">
                                                        <ComboBox Style="{ThemeResource AcrylicComboBoxStyle}" Margin="{StaticResource XSmallTopMargin}" CornerRadius="10" SelectedIndex="0" x:Name="HideCom" SelectionChanged="HideCom_SelectionChanged">
                                                            <ComboBoxItem x:Uid="Settings_Hide_Nothing_Minimum" Content="Не скрываться"/>
                                                            <ComboBoxItem x:Uid="Settings_Hide_Minimize_Minimum" Content="При сворачивании"/>
                                                            <ComboBoxItem x:Uid="Settings_Hide_Close_Minimum" Content="При закрытии"/>
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border Height="10" Background="Transparent"/>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                            </FlipView>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,-2,0,2" VerticalAlignment="Stretch" CornerRadius="16" 
                          Shadow="{ThemeResource SharedShadow}" 
                          Translation="0,0,20" 
                          Background="{ThemeResource ControlStrokeColorDefaultBrush}" 
                          BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}" 
                          BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="23,-2,0,0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock FontWeight="SemiBold" x:Uid="Preset_AdvancedMode" FontSize="16" Text="Расширенный режим"/>
                        </StackPanel>
                        <Button Grid.Column="1" HorizontalAlignment="Stretch" x:Name="TryAdvancedButton" CornerRadius="16" Margin="10,0,23,0" Click="TryAdvancedButton_Click"
                                Shadow="{ThemeResource SharedShadow}" 
                                Translation="0,0,20">
                            <TextBlock x:Uid="Preset_AdvancedModeTry" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Попробовать" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" VerticalAlignment="Top" Margin="10,0,10,7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="47"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" CornerRadius="16" 
                      Shadow="{ThemeResource SharedShadow}" 
                      Translation="0,0,20" VerticalAlignment="Stretch"
                      Background="{ThemeResource ControlStrokeColorDefaultBrush}" 
                      BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}" 
                      BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="42"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid Margin="23,17,23,10" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="ProfileSettings_InfoRow" Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" VerticalAlignment="Top" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel x:Name="SelectedProfile_TextsStackPanel" Grid.Column="0" VerticalAlignment="Top" Orientation="Vertical">
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="SelectedProfile_Name" Text="Имя пресета" FontWeight="SemiBold" FontSize="16"/>
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="SelectedProfile_Description" Text="Обычный кастомный пресет. Ничего нового. Кстати, вы можете изменить ему описание!" FontWeight="Normal" FontSize="15"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0,17,-13,-10" x:Name="EditCurrent_ButtonsStackPanel" HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button x:Name="EditProfileButton" Click="EditProfileButton_Click_1" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Grid.Row="0" CornerRadius="16" HorizontalAlignment="Right" Width="40" Height="40" HorizontalContentAlignment="Stretch">
                                            <Button.Flyout>
                                                <Flyout Placement="Left">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Shadow="{StaticResource SharedShadow}" Translation="0,0,14" CornerRadius="16" Height="60" Width="60">
                                                            <FontIcon Glyph="&#xE718;"/>
                                                        </Button>
                                                        <StackPanel Margin="15,0,0,0">
                                                            <TextBox Shadow="{StaticResource SharedShadow}" Translation="0,0,10" x:Uid="Param_Profile_New_Name_Add" x:Name="EditProfileN" PlaceholderText="Enter new name" CornerRadius="9" Width="280"></TextBox>
                                                            <TextBox Shadow="{StaticResource SharedShadow}" Translation="0,0,10" Margin="0,6,0,0" x:Uid="Param_Profile_New_Desc_Add" x:Name="EditProfileD" PlaceholderText="Enter new desc" CornerRadius="9" Width="280"></TextBox>
                                                            <Grid Margin="0,6,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <Button Shadow="{StaticResource SharedShadow}" Translation="0,0,14" Grid.Column="0" Margin="0,0,3,0" HorizontalAlignment="Stretch" x:Uid="Param_Profile_Delete_Profile" Click="DeleteProfileButton_Click"  CornerRadius="9" Content="Delete profile"/>
                                                                <Button Shadow="{StaticResource SharedShadow}" Translation="0,0,14" Grid.Column="1" Margin="3,0,0,0" HorizontalAlignment="Stretch" x:Uid="Param_Profile_Edit_Name" Click="EditProfileButton_Click" Style="{StaticResource AccentButtonStyle}" CornerRadius="9" Content="Edit name"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Flyout>
                                            </Button.Flyout>
                                            <Button.RenderTransform>
                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7"/>
                                            </Button.RenderTransform>
                                            <Grid Margin="-5,-5,-5,-5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <FontIcon Margin="3,0,0,0" Glyph="&#xE70F;" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
