<Page
    x:Class="Saku_Overclock.Views.ПресетыPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:Saku_Overclock.Styles"
    xmlns:double="using:Saku_Overclock.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />
        <double:DoubleToPercentConverter x:Key="DoubleToPercent" />
        <Flyout x:Name="SymbolFlyout" Placement="Bottom">
            <!-- flyout content -->
            <GridView x:Name="SelectionGrid" IsItemClickEnabled="True">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid MaximumRowsOrColumns="6" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.Resources>
                    <Style TargetType="Rectangle">
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="RadiusX" Value="4" />
                        <Setter Property="RadiusY" Value="4" />
                    </Style>
                </GridView.Resources>
                <GridView.Items>
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xEcad;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeafc;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeb05;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe718;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe734;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeadf;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeb3c;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeb44;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xeb51;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xebd2;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xec32;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xec46;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xec48;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xec49;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xec4a;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xecc6;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe7ba;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xedad;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xee6f;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xee71;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xf211;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe945;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe9d9;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe9ca;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xe9ce;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xE706;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xE71A;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xE723;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xE733;" />
                    <FontIcon VerticalAlignment="Center" Margin="0,-10,0,0" HorizontalAlignment="Left" Glyph="&#xE82F;" />
                </GridView.Items>
            </GridView>
        </Flyout>
    </Page.Resources>
    <Grid Margin="-48,0,-50,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="1200">
        <Button x:Name="HiddenButton" Visibility="Collapsed" />
        <Button x:Name="HiddenAccentButton" Style="{ThemeResource AccentButtonStyle}" Visibility="Collapsed" />
        <TextBlock x:Uid="Preset_Name" Text="Пресеты" FontSize="30" Margin="0,-95,0,0" />
        <Grid HorizontalAlignment="Stretch" Margin="0,-44,0,0" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,5,5" CornerRadius="8">
                <Grid HorizontalAlignment="Stretch" Margin="0,0,0,-5" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.9*" MaxHeight="190" />
                        <RowDefinition Height="2.2*" MaxHeight="236" />
                        <RowDefinition MaxHeight="50" />
                        <RowDefinition MaxHeight="5" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" MaxHeight="190" Margin="0,10,0,0" CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="45" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <TextBlock Margin="0,-20,0,0" x:Uid="Preset_SavedPresets" VerticalAlignment="Center"
                                   Text="Сохранённые пресеты" Grid.Row="0" FontWeight="SemiBold" FontSize="16" />
                        <Button Click="AddPresetButton_Click" Margin="0,-18,-35,-10" BorderBrush="Transparent"
                                Background="Transparent" VerticalAlignment="Center" Grid.Row="0" CornerRadius="16"
                                HorizontalAlignment="Right" Height="40" HorizontalContentAlignment="Stretch">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                            </Button.RenderTransform>
                            <StackPanel Orientation="Horizontal" Margin="-5,-5,-5,-5" HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                <TextBlock FontSize="18" Margin="0,-1,0,0" x:Uid="Preset_SavedPresetsAddNew"
                                           Text="Добавить " />
                                <FontIcon Margin="7,0,0,0" Glyph="&#xE710;" HorizontalAlignment="Left"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Grid Grid.Row="1" Margin="0,-8,0,7" CornerRadius="16" Shadow="{ThemeResource SharedShadow}"
                              Translation="0,0,20" Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                              BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                              BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <local:PresetSelector Margin="8,11,8,11"
                                                   SelectionChanged="PresetsControl_SelectionChanged"
                                                   x:Name="PresetsControl" VerticalAlignment="Stretch"
                                                   HorizontalAlignment="Stretch" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" MaxHeight="230" CornerRadius="8" Visibility="Visible">
                        <TextBlock x:Uid="Preset_AdvancedFeatures" VerticalAlignment="Top" HorizontalAlignment="Left"
                                   Text="Киллер-фичи" Grid.Row="0" FontWeight="SemiBold" FontSize="16" />
                        <Grid Margin="0,32,0,12" CornerRadius="16" Shadow="{ThemeResource SharedShadow}"
                              Translation="0,0,20" Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                              BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}"
                              BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                            <FlipView Background="Transparent" Margin="8,0,8,0">
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold"
                                                               FontSize="17" x:Uid="Preset_ReapplyOptions"
                                                               Text="Переприменение разгона" />
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_ReapplyOptionsDesc"
                                                               Text="Переприменять последние применённые параметры для избежания перезаписи другими приложениями" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal"
                                                                HorizontalAlignment="Center">
                                                        <ToggleButton Click="ReapplyOptions_Toggled"
                                                                      x:Name="ReapplyOptionsDisabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл"
                                                                       x:Uid="Preset_CurveOptions_Disabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                        <ToggleButton Click="ReapplyOptions_Toggled"
                                                                      x:Name="ReapplyOptionsEnabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл"
                                                                       x:Uid="Preset_RtssOverlay_Enabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock FontWeight="SemiBold" FontSize="17"
                                                                   x:Uid="Preset_RtssOverlay" Text="RTSS Оверлей" />
                                                        <FontIcon x:Uid="InfoARTSSTooltip" Margin="5,5.5,-11,-4"
                                                                  FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                  Glyph="&#xe9ce;">
                                                            <FontIcon.RenderTransform>
                                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_RtssOverlayDesc"
                                                               Text="Включает оверлей с системными показателями поверх игры" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal"
                                                                HorizontalAlignment="Center">
                                                        <ToggleButton Click="RtssOverlaySwitch_Toggled"
                                                                      x:Name="RtssOverlayDisabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл"
                                                                       x:Uid="Preset_CurveOptions_Disabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                        <ToggleButton Click="RtssOverlaySwitch_Toggled"
                                                                      x:Name="RtssOverlayEnabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл"
                                                                       x:Uid="Preset_RtssOverlay_Enabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <TextBlock FontWeight="SemiBold" FontSize="17" Text="TrayMon" />
                                                        <FontIcon x:Uid="InfoANiIcons" Margin="5,5.5,-11,-4"
                                                                  FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                  Glyph="&#xe9ce;">
                                                            <FontIcon.RenderTransform>
                                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                            </FontIcon.RenderTransform>
                                                        </FontIcon>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_RtssOverlayDesc"
                                                               Text="Включает умный мониторинг показателей прямо в трее вашей системы" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal"
                                                                HorizontalAlignment="Center">
                                                        <ToggleButton Click="TrayMonFeatSwitch_Toggled"
                                                                      x:Name="TrayMonFeatDisabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл"
                                                                       x:Uid="Preset_CurveOptions_Disabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                        <ToggleButton Click="TrayMonFeatSwitch_Toggled"
                                                                      x:Name="TrayMonFeatEnabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл"
                                                                       x:Uid="Preset_RtssOverlay_Enabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold"
                                                               FontSize="17" x:Uid="Preset_AutoApplyOptions"
                                                               Text="Применение при запуске" />
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_AutoApplyOptionsDesc"
                                                               Text="Автоматически переприменять последние применённые параметры разгона после открытия программы" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <StackPanel Margin="0,-9,0,-9" Orientation="Horizontal"
                                                                HorizontalAlignment="Center">
                                                        <ToggleButton Click="AutoApplyOptions_Toggled"
                                                                      x:Name="AutoApplyOptionsDisabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      IsChecked="True">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Выкл"
                                                                       x:Uid="Preset_CurveOptions_Disabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                        <ToggleButton Click="AutoApplyOptions_Toggled"
                                                                      x:Name="AutoApplyOptionsEnabled"
                                                                      Background="Transparent"
                                                                      BorderBrush="Transparent" CornerRadius="10"
                                                                      Margin="4,0,0,0">
                                                            <TextBlock Margin="0,-2,0,-2" Text="Вкл"
                                                                       x:Uid="Preset_RtssOverlay_Enabled"
                                                                       FontWeight="SemiBold" />
                                                        </ToggleButton>
                                                    </StackPanel>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold"
                                                               FontSize="17" x:Uid="Settings_AppStart"
                                                               Text="Параметры запуска" />
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_AppStartDesc"
                                                               Text="Запускать программу при входе в систему. Режим запуска можно выбрать: в трее, с окном или не запускаться" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <Grid Margin="0,-9,0,-9" HorizontalAlignment="Center">
                                                        <ComboBox MinWidth="130"
                                                                  Style="{ThemeResource AcrylicComboBoxStyle}"
                                                                  Margin="{StaticResource XSmallTopMargin}"
                                                                  CornerRadius="10" SelectedIndex="0"
                                                                  x:Name="AutostartCom"
                                                                  SelectionChanged="AutostartCom_SelectionChanged">
                                                            <ComboBoxItem x:Uid="Settings_Start_Nothing"
                                                                          Content="Ничего не делать" />
                                                            <ComboBoxItem x:Uid="Settings_Start_Mini"
                                                                          Content="Скрываться в трей" />
                                                            <ComboBoxItem x:Uid="Settings_Start_Boot"
                                                                          Content="Автостарт с ситемой" />
                                                            <ComboBoxItem x:Uid="Settings_Start_MiniBoot"
                                                                          Content="Автостарт в трее" />
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                                <FlipViewItem Margin="-8,0,-8,0">
                                    <ScrollViewer>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="0.53*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="23,0,0,0"
                                                            VerticalAlignment="Center" HorizontalAlignment="Left"
                                                            Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Left" FontWeight="SemiBold"
                                                               FontSize="17" x:Uid="Preset_AppHide"
                                                               Text="Параметры скрытия" />
                                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                                                               MaxWidth="170" x:Uid="Preset_AppHideDesc"
                                                               Text="Скрывать программу в трей при закрытии или сворачивании или не скрывать программу вообще" />
                                                </StackPanel>
                                                <Border Grid.Column="1" Margin="-45,5,0,-5" Width="1" Height="20"
                                                        Background="{Binding ElementName=HiddenButton, Path=BorderBrush}" />
                                                <Border Grid.Column="2" Height="32" HorizontalAlignment="Center"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}"
                                                        CornerRadius="10" Margin="0,4,10,-4"
                                                        Shadow="{ThemeResource SharedShadow}"
                                                        Translation="0,0,10">
                                                    <Grid Margin="0,-9,0,-9" HorizontalAlignment="Center">
                                                        <ComboBox Style="{ThemeResource AcrylicComboBoxStyle}"
                                                                  Margin="{StaticResource XSmallTopMargin}"
                                                                  CornerRadius="10" SelectedIndex="0" x:Name="HideCom"
                                                                  SelectionChanged="HideCom_SelectionChanged">
                                                            <ComboBoxItem x:Uid="Settings_Hide_Nothing_Minimum"
                                                                          Content="Не скрываться" />
                                                            <ComboBoxItem x:Uid="Settings_Hide_Minimize_Minimum"
                                                                          Content="При сворачивании" />
                                                            <ComboBoxItem x:Uid="Settings_Hide_Close_Minimum"
                                                                          Content="При закрытии" />
                                                        </ComboBox>
                                                    </Grid>
                                                </Border>
                                                <Border Grid.Column="0" Height="10" Background="Transparent" />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </FlipViewItem>
                            </FlipView>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,-2,0,2" VerticalAlignment="Stretch" CornerRadius="16"
                          Shadow="{ThemeResource SharedShadow}"
