                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_v5_Help" HorizontalAlignment="Left"  Margin="295,7,0,0" Glyph="&#xe7ba;">
                                    <FontIcon.RenderTransform>
