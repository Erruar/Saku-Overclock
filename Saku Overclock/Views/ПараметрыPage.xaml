    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:Saku_Overclock.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <Flyout x:Name="SymbolFlyout" Placement="Bottom">
            <!-- flyout content -->
            <GridView ItemClick="SymbolList_ItemClick" IsItemClickEnabled="True">
