                    </Expander>

                    <Expander x:Name="Exp1" Grid.Row="1" VerticalAlignment="Top">
                        <Expander.Header>
                            <Grid Height="65" Width="2000">
                                <SymbolIcon Symbol="Library" HorizontalAlignment="Left" Margin="0,0,9,0"/>
                                <TextBlock x:Uid="Param_VRM_Name" Margin="35,12,0,0" FontWeight="SemiBold" VerticalAlignment="Top" Text="VRM Система питания CPU"></TextBlock>
