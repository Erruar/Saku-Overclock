                            </Grid>
                            <Grid Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Width="2000">
                                <TextBlock x:Uid="Param_CPU_c1" Text="Максимальная температура CPU (C)" FontSize="15"></TextBlock>
                                <CheckBox  Margin="0,20,0,0" x:Name="c1" Checked="C1_Checked" Unchecked="C1_Checked"></CheckBox>
                                <Slider x:Name="c1v" ValueChanged="C1_ValueChanged" Margin="35,20,0,0" VerticalAlignment="Top" Width="200" Value="80" HorizontalAlignment="Left" Minimum="50" Maximum="100">
                                </Slider>
                                <Button Height="30" Width="60" x:Name="c1t" Margin="245,20,0,0" Content="{Binding ElementName=c1v, Path=Value}"></Button>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" x:Uid="Param_c1_Help" HorizontalAlignment="Left" Margin="295,7,0,0" Glyph="&#xe9ce;">
