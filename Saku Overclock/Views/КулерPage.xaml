<Page
    x:Class="Saku_Overclock.Views.КулерPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />
    </Page.Resources>
    <Grid Margin="-48,0,-50,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="1200">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="460" />
            <RowDefinition MaxHeight="0.12" />
        </Grid.RowDefinitions>
        <Button x:Name="HiddenButton" Visibility="Collapsed" />
        <Button Grid.Row="0" IsEnabled="False" Visibility="Collapsed" />
        <Button Grid.Row="0" Style="{ThemeResource AccentButtonStyle}" Visibility="Collapsed" />
        <TextBlock Grid.Row="0" x:Uid="Cooler_Name" Text="Пресеты" FontSize="30" Margin="0,-95,0,0" />
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,-44,0,0" CornerRadius="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,5,5" CornerRadius="8">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="62" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,0" CornerRadius="16" Shadow="{ThemeResource SharedShadow}"
                          Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}"
                          BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                          BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                        <ScrollViewer Margin="0,0,-20,-20" Padding="0,0,20,20">
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" x:Name="CoolerFansGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Border Margin="-5,-25,0,0" HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch">
                                            <Grid>
                                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Foreground="White" FontSize="20"
                                                               HorizontalAlignment="Center" x:Name="CpuFanRpm"
                                                               Text="N/A" />
                                                    <TextBlock FontStyle="Italic" Foreground="White" FontSize="20"
                                                               FontWeight="SemiBold" HorizontalAlignment="Center"
                                                               Margin="0,20,0,0" Text="RPM" />
                                                </Grid>
                                                <Button CornerRadius="9" VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" Height="30" Margin="5,0,0,40"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                                                    <TextBlock Foreground="White" FontWeight="Bold" FontSize="16"
                                                               VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                                               x:Name="CpuFanTemp" Margin="0,0,0,0" Text="CPU Fan" />
                                                </Button>
                                            </Grid>
                                            <Border.Background>
                                                <ImageBrush
                                                    ImageSource="/Assets/AsusCoolerIcons/CoolerIcon.png"
                                                    Stretch="Uniform" />
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1" x:Name="CoolerFan2">
                                        <Border Margin="0,-25,0,0" HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch">
                                            <Grid>
                                                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Foreground="White" FontSize="20"
                                                               HorizontalAlignment="Center" x:Name="GpuFanRpm"
                                                               Text="N/A" />
                                                    <TextBlock FontStyle="Italic" Foreground="White" FontSize="20"
                                                               FontWeight="SemiBold" HorizontalAlignment="Center"
                                                               Margin="0,20,0,0" Text="RPM" />
                                                </Grid>
                                                <Button CornerRadius="9" VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Center" Height="30" Margin="5,0,0,40"
                                                        Background="{Binding ElementName=HiddenButton, Path=Background}"
                                                        BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                                                        BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">
                                                    <TextBlock Foreground="White" FontWeight="Bold" FontSize="16"
                                                               VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                                               x:Name="GpuFanTemp" Margin="0,0,0,0" Text="GPU Fan" />
                                                </Button>
                                            </Grid>
                                            <Border.Background>
                                                <ImageBrush
                                                    ImageSource="/Assets/AsusCoolerIcons/CoolerIconGpu.png"
                                                    Stretch="Uniform" />
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1" Margin="20,5,20,20">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,5,0,0">
                                        <FontIcon FontSize="25" Glyph="&#xEC4A;" Margin="0,-3,0,0" />
                                        <StackPanel Margin="7,0,0,0" Orientation="Vertical">
                                            <TextBlock FontWeight="SemiBold" Text="TDP" />
                                            <TextBlock FontWeight="SemiBold" x:Name="TdpLimitSensorText" Text="20W" />
                                        </StackPanel>
                                        <TextBlock Margin="5,-8,0,0" VerticalAlignment="Top" Text="18"
                                                   FontWeight="Bold" FontSize="38" x:Name="TdpValueSensorText" />
                                        <TextBlock Margin="1,14,0,0" Text="W" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="40,5,0,0">
                                        <FontIcon FontSize="25" Glyph="&#xE9D9;" Margin="0,-3,0,0" />
                                        <TextBlock Margin="5,-8,0,0" VerticalAlignment="Top" x:Name="CpuFreqSensorText"
                                                   Text="5.5" FontWeight="Bold" FontSize="38" />
                                        <TextBlock Margin="1,14,0,0" Text="GHz" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,5,0,0">
                                        <FontIcon FontSize="25" Glyph="&#xF7B0;" Margin="0,-3,0,0" />
                                        <StackPanel Orientation="Vertical" Margin="7,0,0,5" VerticalAlignment="Bottom">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:Name="CpuCurrentSensorText" Margin="4,-8,0,0"
                                                           FontWeight="Bold" FontSize="38" Text="44" />
                                                <TextBlock Margin="1,19,0,0" VerticalAlignment="Center" Text="A" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,10,0,2" CornerRadius="16" Shadow="{ThemeResource SharedShadow}"
                          Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}"
                          BorderBrush="{Binding ElementName=HiddenButton, Path=BorderBrush}"
                          BorderThickness="{Binding ElementName=HiddenButton, Path=BorderThickness}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="17,-2,0,0" Grid.Column="0" HorizontalAlignment="Left"
                                    VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock FontWeight="SemiBold" x:Uid="Preset_AdvancedMode" FontSize="16"
                                       Text="Расширенный режим" />
                        </StackPanel>
                        <Button Shadow="{ThemeResource SharedShadow}" Translation="0,0,20" Grid.Column="1"
                                x:Uid="Cooler_Advanced" HorizontalAlignment="Stretch"
                                CornerRadius="16" Margin="10,0,12,0" Click="AdvancedCooler_Click">
                            <TextBlock x:Uid="Preset_AdvancedModeTry" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Text="Попробовать" FontWeight="SemiBold" />
                        </Button>
                    </Grid>

                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="10,0,10,7" CornerRadius="16" Shadow="{ThemeResource SharedShadow}"
                  Translation="0,0,20" Background="{Binding ElementName=HiddenButton, Path=Background}"
                  BorderBrush="{Binding ElementName=Discrd, Path=BorderBrush}"
                  BorderThickness="{Binding ElementName=Discrd, Path=BorderThickness}">

                <Grid Grid.Row="0">
                    <Grid Margin="23,17,23,10" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"
                                   x:Uid="Cooler_SelectedMode" Text="Режим управления кулерами" FontWeight="SemiBold"
                                   FontSize="16" />
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <ScrollViewer Margin="0,0,-20,-20" Padding="0,0,20,20">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Visibility="Visible" Orientation="Horizontal" Margin="0,4,0,4">
                                        <ToggleButton Click="ModeOptions_Button_Click" x:Name="NbfcOptionsButton"
                                                      CornerRadius="9" IsChecked="True"
                                                      Shadow="{ThemeResource SharedShadow}"
                                                      Translation="0,0,14">
                                            <TextBlock Margin="0,-2,0,-2" Text="Универсальный NBFC"
                                                       x:Uid="Cooler_SelectedMode_nbfc" FontWeight="SemiBold" />
                                        </ToggleButton>
                                        <ToggleButton Click="ModeOptions_Button_Click" x:Name="AsusOptionsButton"
                                                      CornerRadius="9" Margin="15,0,0,0"
                                                      Shadow="{ThemeResource SharedShadow}"
                                                      Translation="0,0,14">
                                            <TextBlock Margin="0,-2,0,-2" Text="Ноутбуки Asus"
                                                       x:Uid="Cooler_SelectedMode_asus" FontWeight="SemiBold" />
                                        </ToggleButton>
                                        <FontIcon Glyph="&#xE7BA;" x:Name="AsusUnavailable" Visibility="Collapsed"
                                                  Margin="-10,-20,0,0">
                                            <FontIcon.RenderTransform>
                                                <ScaleTransform CenterX="20" CenterY="20" ScaleX="0.7" ScaleY="0.7" />
                                            </FontIcon.RenderTransform>
                                        </FontIcon>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                        <Grid x:Name="CoolerConfig" HorizontalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock x:Uid="Cooler_Config" Text="Сохранённые конфиги"
                                                           FontSize="20" />
                                                <Button CornerRadius="12" Margin="5,-4,0,0"
                                                        Shadow="{StaticResource SharedShadow}" Translation="0,0,20"
                                                        VerticalAlignment="Bottom" Click="Suggest_Click"
                                                        x:Name="Suggest" x:Uid="Cooler_Suggest" Height="40" Width="40"
                                                        ToolTipService.ToolTip="Suggest">
                                                    <Button.RenderTransform>
                                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6" CenterX="20"
                                                                        CenterY="20" />
                                                    </Button.RenderTransform>
                                                    <Grid>
                                                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                  HorizontalAlignment="Left" Margin="-5,0,-5,0"
                                                                  Glyph="&#xe897;" />
                                                    </Grid>
                                                </Button>
                                                <TeachingTip x:Name="SuggestTip"
                                                             Target="{x:Bind Suggest}" x:Uid="Cooler_suggesttip"
                                                             Title="These configs are the best for you:">
                                                    <TeachingTip.IconSource>
                                                        <SymbolIconSource Symbol="Refresh" />
                                                    </TeachingTip.IconSource>
                                                </TeachingTip>
                                            </StackPanel>
                                            <Grid Grid.Row="1" Margin="2,7,2,0">
                                                <ComboBox SelectedIndex="0" CornerRadius="9"
                                                          Style="{ThemeResource AcrylicComboBoxStyle}"
                                                          x:Name="ConfigSelectorComboBox"
                                                          Height="30" HorizontalAlignment="Stretch"
                                                          SelectionChanged="ConfigSelector_SelectionChanged">
                                                    <ComboBoxItem x:Uid="Cooler_NbfcNoConfigFiles">Файлы конфигурации не найдены</ComboBoxItem>
                                                </ComboBox>
                                                <Border CornerRadius="9" VerticalAlignment="Top"
                                                        Shadow="{StaticResource SharedShadow}" Translation="0,0,20"
                                                        HorizontalAlignment="Stretch" Margin="-1,0,-1,0" Height="32" />
                                            </Grid>
                                        </Grid>
                                        <Grid x:Name="NbfcUnavailable" Visibility="Collapsed"
                                              HorizontalAlignment="Stretch" Margin="0,10,0,0">
                                            <TextBlock FontWeight="SemiBold" HorizontalAlignment="Center"
                                                       x:Uid="Cooler_NbfcIsntInstalled"
                                                       Text="Вы уверены что NBFC установлен?" />
                                            <Button Click="InstallNbfc_Click" CornerRadius="10"
                                                    Shadow="{StaticResource SharedShadow}" x:Uid="Cooler_InstallNbfc"
                                                    Translation="0,0,20" HorizontalAlignment="Center" FontWeight="Bold"
                                                    Margin="0,30,0,0" Content="Установить NBFC" />
                                        </Grid>
                                        <Grid x:Name="CoolerManagementGrid" HorizontalAlignment="Stretch"
                                              Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Uid="Cooler_Service" Text="Управление кулерами"
                                                       FontSize="20" />
                                            <Grid Grid.Row="1" Margin="2,7,2,0">
                                                <ComboBox SelectedIndex="0" CornerRadius="9"
                                                          Style="{ThemeResource AcrylicComboBoxStyle}"
                                                          x:Name="ServiceCombo" Height="30"
                                                          HorizontalAlignment="Stretch"
                                                          SelectionChanged="ServiceCombo_SelectionChanged">
                                                    <ComboBoxItem x:Uid="Cooler_Service_Disabled">Disabled</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Service_Read">Read only</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Service_Enabled">Auto</ComboBoxItem>
                                                </ComboBox>
                                                <Border CornerRadius="9" VerticalAlignment="Top"
                                                        Shadow="{StaticResource SharedShadow}" Translation="0,0,20"
                                                        HorizontalAlignment="Stretch" Margin="-1,0,-1,0" Height="32" />
                                            </Grid>
                                        </Grid>

                                        <Grid x:Name="CoolerManagementTypeGrid" HorizontalAlignment="Stretch"
                                              Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Uid="Cooler_Curve"
                                                       Text="Тип регулирования кулерами" FontSize="20" />
                                            <Grid Grid.Row="1" Margin="2,7,2,0">
                                                <ComboBox SelectedIndex="0" CornerRadius="9"
                                                          Style="{ThemeResource AcrylicComboBoxStyle}"
                                                          x:Name="CurveCombo" Height="30" HorizontalAlignment="Stretch"
                                                          SelectionChanged="CurveCombo_SelectionChanged">
                                                    <ComboBoxItem x:Uid="Cooler_Curve_Auto">Кривые из конфигурации</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Curve_FxCu">Кулер 1: Фиксированный, Кулер 2: Кривая</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Curve_CuFx">Кулер 1: Кривая, Кулер 2: Фиксированный</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Curve_Fixed_Range">Различный фиксированный</ComboBoxItem>
                                                    <ComboBoxItem x:Uid="Cooler_Curve_Fixed">Полностью фиксированный</ComboBoxItem>
                                                </ComboBox>
                                                <Border CornerRadius="9" VerticalAlignment="Top"
                                                        Shadow="{StaticResource SharedShadow}" Translation="0,0,20"
                                                        HorizontalAlignment="Stretch" Margin="-1,0,-1,0" Height="32" />
                                            </Grid>
                                        </Grid>

                                        <Grid x:Name="CoolerCurveFan1" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Uid="Cooler_Curve_Fan"
                                                       x:Name="CoolerCurveFanText" Text="Фиксированный режим вращения"
                                                       FontSize="20" />
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                                                        HorizontalAlignment="Center" Margin="0,7,0,0" Grid.Row="1">
                                                <ToggleButton CornerRadius="22"
                                                              x:Uid="Cooler_AsusModeCoolerSpeeds_Quiet" Height="72"
                                                              Width="72" HorizontalAlignment="Stretch"
                                                              x:Name="NbfcQuietToggle" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon UriSource="/Assets/AsusCoolerIcons/QuietSpeed.png"
                                                                    ShowAsMonochrome="True" Width="40" Height="40"
                                                                    HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerQuiet" Text="Тихий" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton CornerRadius="22"
                                                              x:Uid="Cooler_AsusModeCoolerSpeeds_Balance" Height="72"
                                                              Width="72" HorizontalAlignment="Stretch" Margin="6,0,0,0"
                                                              x:Name="NbfcBalanceToggle" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon
                                                            UriSource="/Assets/AsusCoolerIcons/BalanceSpeed.png"
                                                            ShowAsMonochrome="True" Width="40" Height="40"
                                                            HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerBalance" Text="Баланс" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton CornerRadius="22"
                                                              x:Uid="Cooler_AsusModeCoolerSpeeds_Turbo" Height="72"
                                                              Width="72" HorizontalAlignment="Stretch" Margin="6,0,0,0"
                                                              x:Name="NbfcTurboToggle" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon UriSource="/Assets/AsusCoolerIcons/TurboSpeed.png"
                                                                    ShowAsMonochrome="True" Width="40" Height="40"
                                                                    HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerTurbo" Text="Турбо" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton CornerRadius="22"
                                                              x:Uid="Cooler_AsusModeCoolerSpeeds_Manual" Height="72"
                                                              Width="72" HorizontalAlignment="Stretch" Margin="6,0,0,0"
                                                              x:Name="NbfcAutoToggle" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" Margin="0,14,0,0"
                                                                HorizontalAlignment="Center">
                                                        <FontIcon Glyph="&#xE9E9;" HorizontalAlignment="Center"
                                                                  FontSize="25" Margin="0,0,2,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerManual" Text="Ручной" />
                                                    </StackPanel>
                                                </ToggleButton>
                                            </StackPanel>
                                            <Grid Grid.Row="2" Margin="0,5,0,0" x:Name="CoolerFan1SliderGrid"
                                                  Visibility="Collapsed">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" x:Name="CoolerFan1Manual" Margin="5,0,20,0"
                                                        Minimum="0" Maximum="101" Value="76"
                                                        ValueChanged="Cooler_Fan_Manual_ValueChanged"
                                                        HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                                <StackPanel Grid.Column="1" Margin="0,5.5,3,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        Text="{Binding ElementName=CoolerFan1Manual, Path=Value}" />
                                                    <TextBlock Text="%" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <Grid x:Name="CoolerCurveFan2" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" x:Uid="Cooler_Curve_Fan2"
                                                       Text="Фиксированный режим вращения кулера 2" FontSize="20" />
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                        VerticalAlignment="Top" Margin="0,7,0,0" Grid.Row="1">
                                                <ToggleButton x:Uid="Cooler_AsusModeCoolerSpeeds_Quiet" Height="72"
                                                              Width="72" CornerRadius="22"
                                                              HorizontalAlignment="Stretch" x:Name="NbfcQuietToggle1"
                                                              Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon UriSource="/Assets/AsusCoolerIcons/QuietSpeed.png"
                                                                    ShowAsMonochrome="True" Width="40" Height="40"
                                                                    HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerQuiet" Text="Тихий" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton x:Uid="Cooler_AsusModeCoolerSpeeds_Balance" Height="72"
                                                              Width="72" CornerRadius="22"
                                                              HorizontalAlignment="Stretch" Margin="4,0,0,0"
                                                              x:Name="NbfcBalanceToggle1"
                                                              Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon
                                                            UriSource="/Assets/AsusCoolerIcons/BalanceSpeed.png"
                                                            ShowAsMonochrome="True" Width="40" Height="40"
                                                            HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerBalance" Text="Баланс" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton x:Uid="Cooler_AsusModeCoolerSpeeds_Turbo" Height="72"
                                                              Width="72" CornerRadius="22"
                                                              HorizontalAlignment="Stretch" Margin="4,0,0,0"
                                                              x:Name="NbfcTurboToggle1" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                        <BitmapIcon UriSource="/Assets/AsusCoolerIcons/TurboSpeed.png"
                                                                    ShowAsMonochrome="True" Width="40" Height="40"
                                                                    HorizontalAlignment="Center" Margin="0,0,0,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerTurbo" Text="Турбо" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <ToggleButton x:Uid="Cooler_AsusModeCoolerSpeeds_Manual" Height="72"
                                                              Width="72" CornerRadius="22"
                                                              HorizontalAlignment="Stretch" Margin="4,0,0,0"
                                                              x:Name="NbfcAutoToggle1" Click="Nbfc_Fan1Control_Click"
                                                              Shadow="{ThemeResource SharedShadow}"
                                                              Translation="0,0,15">
                                                    <StackPanel Orientation="Vertical" Margin="0,14,0,0"
                                                                HorizontalAlignment="Center">
                                                        <FontIcon Glyph="&#xE9E9;" HorizontalAlignment="Center"
                                                                  FontSize="25" Margin="0,0,2,0" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   x:Uid="Cooler_AsusModeCoolerManual" Text="Ручной" />
                                                    </StackPanel>
                                                </ToggleButton>
                                            </StackPanel>
                                            <Grid Grid.Row="2" Margin="0,5,0,0" x:Name="CoolerFan2SliderGrid"
                                                  Visibility="Collapsed">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" x:Name="CoolerFan2Manual" Minimum="0"
